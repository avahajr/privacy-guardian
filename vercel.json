{
  "functions": {
    "api/server.py": {
      "memory": 1024,
      "maxDuration": 30,
      "includeFiles": "api/**"
    }
  },
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/api/server.py"
    }
  ],
  "installCommand": "npm install && pip install -r requirements.txt",
  "buildCommand": "npm run build && mv dist api/dist"
}